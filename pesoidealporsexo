#include <stdio.h>

int main() {
    int sexo, peso;
    float resultado;
    printf("Digite seu Peso: ");
    scanf("%d", &peso);    
    printf("Digite seu Sexo com 1 ou 2, e veja seu peso ideal:\n1-Feminino\n2-Masculino\n");
    scanf("%d", &sexo);
    
    switch (sexo) {
        case 1:
            resultado = (peso - 100) * 0.85;
            printf("Seu peso ideal é= %.2f\n", resultado); 
            break;
        case 2:
            resultado = (peso - 100) * 0.9;
            printf("Seu peso ideal é= %.2f\n", resultado); 
            break;
    }
    
    return 0;
}
