#include <stdio.h>

int main() {
    int a, b, c, cov;
    printf("Digite Seus Numeros:\n");
    scanf("%d %d", &a, &b);
    printf("Digite uma Opção de 1 a 4:\n1-Soma\n2-Subtracao\n3-Multiplicacao\n4-Divisao\n");
    scanf("%d", &cov);
    switch (cov) {
        case 1:
            c = a + b;
            printf("a + b = %d\n", c);
            break;
        case 2:
            c = a - b;
            printf("a - b = %d\n", c);
            break;
        case 3:
            c = a * b;
            printf("a * b = %d\n", c);
            break;
        case 4:
            c = a / b;
            printf("a / b = %d\n", c);
            break;
    }
    return 0;
}
