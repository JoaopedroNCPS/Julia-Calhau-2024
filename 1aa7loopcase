#include <stdio.h>

int main() {
    int dia;
    for(;;) {
        printf("Digite um Numero de 1 a 7:\n");
        scanf("%d", &dia);
        if(dia <= 7) {
        switch (dia) {
        case 1:
            printf("Domingo\n");
            break;
        case 2:
            printf("Segunda\n");
            break;
        case 3:
            printf("Terça\n");
            break;
        case 4:
            printf("Quarta\n");
            break;
        case 5:
            printf("Quinta\n");
            break;
        case 6:
            printf("Sexta\n");
            break;
        case 7:
            printf("Sábado\n");
            break;
        }
        }else{
            printf("Valor incorreto\n");
        }
    }
    return 0;
}
